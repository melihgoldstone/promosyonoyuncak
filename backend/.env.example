# ========================================
# PROMOSYONOYUNCAK.COM - Backend Environment Variables
# ========================================
# Copy this file to .env and fill in your values

# ========== SERVER ==========
NODE_ENV="development"
PORT="5000"

# ========== DATABASE ==========
DATABASE_URL="postgresql://user:password@localhost:5432/promosyonoyuncak"
# Production: Use managed PostgreSQL (Supabase, Neon, Railway)

# ========== JWT AUTHENTICATION ==========
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
# Generate with: openssl rand -base64 32
JWT_EXPIRES_IN="30d"

# ========== CORS - FRONTEND URL (comma separated list) ==========
FRONTEND_URL="http://localhost:3000,https://promosyonoyuncak.com"
# Add every allowed origin separated by commas

# ========== CLOUDINARY (Image Storage) ==========
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
# Or use CLOUDINARY_URL (all-in-one):
# CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"

# ========== EMAIL (SMTP) ==========
SMTP_HOST="smtp.resend.com"
SMTP_PORT="587"
SMTP_USER="resend"
SMTP_PASSWORD="your-resend-api-key"
SMTP_FROM="PROMOSYON OYUNCAK <noreply@promosyonoyuncak.com>"
# Or use Resend API:
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxx"

# ========== IYZICO PAYMENT GATEWAY ==========
IYZICO_API_KEY="your-iyzico-api-key"
IYZICO_SECRET_KEY="your-iyzico-secret-key"
IYZICO_BASE_URL="https://sandbox-api.iyzipay.com"
# Production: https://api.iyzipay.com

# ========== SITE SETTINGS ==========
SITE_NAME="Promosyon Oyuncak"
SITE_URL="https://promosyonoyuncak.com"

# ========== MONITORING (Optional) ==========
SENTRY_DSN="your-sentry-dsn"

# ========== SECURITY (Optional) ==========
MAX_LOGIN_ATTEMPTS="5"
LOCKOUT_DURATION_MINUTES="30"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
